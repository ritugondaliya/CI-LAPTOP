@model CI_Application.Entities.DataModels.User

@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="CSS\bootstrap.min.css" rel="stylesheet" text="text/css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <script src="JavaScript\bootstrap.bundle.min.js"></script>
    <title>RegistrationForm</title>
</head>
<body>
    
    <div class="card mx-5 border-0 centerRegistrationForm">
        <div class="card-body p-0">
            <form asp-controller="User" asp-action="Create">
                <div class="mb-1">
                    <label asp-for="FirstName"  class="form-label">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="validationCustom01"
                           required placeholder="Enter your FirstName" type="text">
                </div>
                <div class="mb-1">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control" id="validationCustom01"
                           required placeholder="Enter your LastNmae">
                </div>
                <div class="mb-1">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" type="number" class="form-control" id="validationCustom01"
                           required placeholder="Enter your PhoneNo." max-width="12"
                           min-width="10">
                </div>
                <div class="mb-1">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1"
                           placeholder="name@gmail.com" aria-describedby="emailHelp">
                </div>
                <div class="mb-1">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1"
                           placeholder="EnterPassword">
                </div>
                <div class="mb-1">
                    <label asp-for="Password" class="form-label">Confirm Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1"
                           placeholder="EnterPassword">
                </div>
                <button type="submit" class="button mt-4">Register</button>
                <p class="d-flex justify-content-center mt-3">
                    <a asp-action="ForgotPassword" asp-controller="Home" class="link1">
                        Lost your Password?
                    </a>
                </p>
                <p class="d-flex justify-content-center mt-1 createacc">
                    Aready Registered?
                    <a asp-action="Login" asp-controller="Home" class="link2 ms-1 ">Login now</a>
                </p>
            </form>
            <p class="d-flex justify-content-center ms-2 pp">Privacy Policy</p>
        </div>
    </div>

   
</body>
</html>
