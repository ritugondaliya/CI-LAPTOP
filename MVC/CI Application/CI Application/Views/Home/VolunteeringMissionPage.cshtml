<body>


    <div class="row ms-5 me-5">
        
        <div class="col-lg-6">
            <!-- Container for the image gallery -->
            <div class="container">

                <!-- Full-width images with number text -->
                <div class="mySlides">
                    <div class="numbertext">1 / 6</div>
                    <img src="~/Images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity-2.png" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">2 / 6</div>
                    <img src="~/Images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity-5.png" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">3 / 6</div>
                    <img src="~/Images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity-5.png" style="width:100%">
                </div>

                <div class="mySlides">
                    <div class="numbertext">4 / 6</div>
                    <img src="~/Images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity-5.png" style="width:100%">
                </div>


                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>

                <!-- Image text -->
                <div class="caption-container">
                    <p id="caption"></p>
                </div>

                <!-- Thumbnail images -->
                <div class="row">
                    <div class="col-3">
                        <img class="demo cursor" src="~/Images/img33.png" style="width:100%" onclick="currentSlide(1)" alt="The Woods">
                    </div>
                    <div class="col-3">
                        <img class="demo cursor" src="~/Images/img33.png" style="width:100%" onclick="currentSlide(2)" alt="Cinque Terre">
                    </div>
                    <div class="col-3">
                        <img class="demo cursor" src="~/Images/img33.png" style="width:100%" onclick="currentSlide(3)" alt="Mountains and fjords">
                    </div>
                    <div class="col-3">
                        <img class="demo cursor" src="~/Images/img33.png" style="width:100%" onclick="currentSlide(4)" alt="Northern Lights">
                    </div>
                </div>
            </div>

            <div class="row d-flex justify-content-evenly mt-3 four-cards" style="font-size:13px;">
                <div class=" city-theme-volunteering ms-2 " style="border:1px solid #ADADAD; width:23%;">
                    <img src="~/Images/pin1.png" class="ms-3" />
                    <div class="ms-3 mt-3">City</div>
                    <div class="ms-3">London</div>
                </div>
                <div class=" city-theme-volunteering" style="border:1px solid #ADADAD; width:23%;">
                    <img src="~/Images/web.png" class="ms-3" />
                    <div class="ms-3 mt-3">Theme</div>
                    <div class="ms-3">Environment</div>
                </div>
                <div class="city-theme-volunteering right-last-1-card" style="border:1px solid #ADADAD; width:23%;">
                    <img src="~/Images/calender.png" class="ms-3" />
                    <div class="ms-3 mt-3">Date</div>
                    <div class="ms-3">Ongoing Opportunity</div>
                </div>
                <div class="city-theme-volunteering right-last-2-card" style="border:1px solid #ADADAD; width:23%;">
                    <img src="~/Images/organization.png" class="ms-3" />
                    <div class="ms-3 mt-3">Organization</div>
                    <div class="ms-3">CSE Network</div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body p-0 mt-3">
